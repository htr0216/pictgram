<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            
            
            <% if !topic.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
                <i class="fa fa-heart like-btn" ></i>
              <% end %>
            <% else %>
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <i class="fa fa-heart unlike-btn"></i>
              <% end %>
            <% end %>
            <%= topic.favorite_users.count %>
            
            <%= image_tag 'comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
              
              <%= form_with(model: [@topic, @comment], url: topic_comments_path(topic_id: topic.id),  local: true) do |f| %>
                <%= f.text_field :content %>
                <%= f.hidden_field :topic_id, value: topic.id %>
                <%= f.submit "コメントする", class: "btn btn-primary" %>
              <% end %>
            <%# link_to "DELETE", topic_comment_path(topic_id: @topic, id: comment.id), method: :delete %>
              
              
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>